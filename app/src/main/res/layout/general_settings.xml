<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/orange8"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/raleway_thin"
        android:paddingTop="20dp"
        android:text="General information"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etAge"
        android:layout_alignStart="@+id/etAge"
        android:layout_marginBottom="-100dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:fontFamily="@font/raleway_thin"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/raleway_thin"
        android:hint="Age"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/raleway_thin"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/mdtp_header_height"
        android:text="Weather notifications"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/raleway_thin"
        android:text="Allow us to notify you whenever you need to carry your jacket or umbrella"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_black_umbrella"
            app:srcCompat="@drawable/ic_black_umbrella" />

        <Switch
            android:id="@+id/sUmbrella"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_thin"
            android:paddingLeft="10dp"
            android:text="Umbrella"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_jacket"
            app:srcCompat="@drawable/ic_jacket" />

        <Switch
            android:id="@+id/sJacket"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_thin"
            android:paddingLeft="10dp"
            android:text="Jacket"
            android:textSize="18sp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sbTemp"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_marginBottom="156dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="91dp"
        android:max="100" />

</LinearLayout>