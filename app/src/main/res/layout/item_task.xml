<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTask"
        android:layout_below="@+id/tvTask"
        android:textColor="@color/purple4"
        android:text="Time" />

    <ImageView
        android:id="@+id/ivCategory"
        android:layout_width="26dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:srcCompat="@android:color/background_dark" />

        <CheckedTextView
            android:id="@+id/tvTask"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/ivCategory"
            android:checkMark="?android:listChoiceIndicatorMultiple"
            android:text="CheckedTextView"
            android:textColor="@color/purple4" />
    </RelativeLayout>

</android.support.v7.widget.CardView>